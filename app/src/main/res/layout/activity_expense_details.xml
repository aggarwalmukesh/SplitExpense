<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExpenseDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <TextView
            android:id="@+id/txt_expense_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            tools:text="Title Text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="Expense Date"
            android:textSize="@dimen/small_font" />

        <TextView
            android:id="@+id/txt_expense_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"
            tools:text="Title Text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="Total Expense Amount"
            android:textSize="@dimen/small_font" />

        <TextView
            android:id="@+id/txt_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"
            tools:text="Title Text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="Description"
            android:textSize="@dimen/small_font" />

        <TextView
            android:id="@+id/txt_expense_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"
            tools:text="Title Text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="Paid By:"
            android:textSize="@dimen/small_font" />

        <TextView
            android:id="@+id/txt_expense_paid_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"
            tools:text="Title Text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="Split equally with:"
            android:textSize="@dimen/small_font" />

        <TextView
            android:id="@+id/txt_expense_split_with"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"
            tools:text="Title Text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="You owe:"
            android:textSize="@dimen/small_font" />

        <TextView
            android:id="@+id/txt_expense_owe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"
            tools:text="Title Text" />

    </LinearLayout>
</ScrollView>